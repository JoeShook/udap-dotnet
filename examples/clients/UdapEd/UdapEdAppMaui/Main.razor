﻿<CascadingAppState>
    <Router AppAssembly="@GetType().Assembly"
            AdditionalAssemblies="new[] { typeof(UdapEd.Shared.Shared.MainLayout).Assembly}">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(UdapEd.Shared.Shared.MainLayout)" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(UdapEd.Shared.Shared.MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAppState>