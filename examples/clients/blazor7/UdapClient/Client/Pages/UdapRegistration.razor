@page "/udapRegistraion"

<ErrorBoundary @ref="ErrorBoundary">
  <ChildContent>
    <MudGrid Class="mt-4">
      <MudItem xs="12" sm="12" md="12">
        <MudText Typo="Typo.h3">Udap Metadata</MudText>
      </MudItem>
        <MudItem xs="12" sm="12" md="12">
        <MudButton Class="mt-3" ButtonType="ButtonType.Button" Variant="Variant.Filled" OnClick="Build">Query</MudButton>
            <MudTextField @bind-Value="@metadataUrl" ></MudTextField>
            <MudSpacer></MudSpacer>
            <pre>@Result</pre>
            <MudSpacer></MudSpacer>
        </MudItem>
        <MudItem>
            <MudButton Class="mt-3" ButtonType="ButtonType.Button" Variant="Variant.Filled" OnClick="Build">Build Authorization Code Request</MudButton>

        </MudItem>
    </MudGrid>
    

  </ChildContent>
  <ErrorContent Context="ex">
    <pre class="blazor-error-boundary">
            @ex.Message
      </pre>
  </ErrorContent>
</ErrorBoundary>