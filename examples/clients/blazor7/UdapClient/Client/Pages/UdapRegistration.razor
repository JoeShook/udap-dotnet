@page "/udapRegistration"

<InputFile id="fileInput" OnChange="UploadFilesAsync" hidden />

<ErrorBoundary @ref="ErrorBoundary">
  <ChildContent>
    <MudGrid Class="mt-4">
      <MudItem xs="12" sm="12" md="12">
        <MudText Typo="Typo.h3">Udap Metadata</MudText>
      </MudItem>
        <MudItem>
            <MudButton Class="mt-3" ButtonType="ButtonType.Button" Variant="Variant.Filled" OnClick="Build">Build Authorization Code Request</MudButton>
            <MudSpacer />
            <MudText Typo="Typo.h4">Client Credentials</MudText>
            <pre>@Result</pre>
            <MudSpacer />
        </MudItem>
    </MudGrid>
    

  </ChildContent>
  <ErrorContent Context="ex">
    <pre class="blazor-error-boundary">
            @ex.Message
      </pre>
  </ErrorContent>
</ErrorBoundary>